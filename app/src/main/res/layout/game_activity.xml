<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gameBack">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textViewrace"
            android:layout_width="190dp"
            android:layout_height="50dp"
            android:layout_below="@+id/buttonrace"
            android:layout_marginStart="33dp"
            android:layout_marginLeft="33dp"
            android:layout_marginTop="24dp"
            android:layout_toEndOf="@+id/textViewtictac"
            android:layout_toRightOf="@+id/textViewtictac"
            android:background="@color/white"
            android:text="Car Racing"
            android:textColor="@color/colorAccent"
            android:textColorHint="@color/mainColor"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/texviewsudoku"
            android:layout_width="190dp"
            android:layout_height="50dp"
            android:layout_below="@+id/buttonsudoku"
            android:layout_marginStart="37dp"
            android:layout_marginLeft="37dp"
            android:layout_marginTop="24dp"
            android:layout_toEndOf="@+id/textViewrace"
            android:layout_toRightOf="@+id/textViewrace"
            android:background="@color/white"
            android:text="Sudoku"
            android:textColor="@color/colorAccent"
            android:textColorHint="@color/mainColor"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/texviewmemory"
            android:layout_width="220dp"
            android:layout_height="50dp"
            android:layout_below="@+id/buttonmemory"
            android:layout_marginStart="29dp"
            android:layout_marginLeft="29dp"
            android:layout_marginTop="24dp"
            android:layout_toEndOf="@+id/texviewsudoku"
            android:layout_toRightOf="@+id/texviewsudoku"
            android:background="@color/white"
            android:text="Memory Game"
            android:textColor="@color/colorAccent"
            android:textColorHint="@color/mainColor"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewtictac"
            android:layout_width="190dp"
            android:layout_height="50dp"
            android:layout_below="@+id/buttonctacto"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="36dp"
            android:layout_marginLeft="36dp"
            android:layout_marginTop="24dp"
            android:background="@color/foodBack"
            android:text="Tic-Tac-Toe"
            android:textColor="@color/colorAccent"
            android:textColorHint="@color/mainColor"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buttonctacto"
            android:layout_width="200dp"
            android:layout_height="240dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="100dp"
            android:background="@drawable/tictacto"
             />

        <Button
            android:id="@+id/buttonrace"
            android:layout_width="200dp"
            android:layout_height="240dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="100dp"
            android:layout_toEndOf="@+id/buttonctacto"
            android:layout_toRightOf="@+id/buttonctacto"
            android:background="@drawable/race"
             />

        <Button
            android:id="@+id/buttonsudoku"
            android:layout_width="200dp"
            android:layout_height="240dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="100dp"
            android:layout_toEndOf="@+id/buttonrace"
            android:layout_toRightOf="@+id/buttonrace"
            android:background="@drawable/sudoku"
             />

        <Button
            android:id="@+id/buttonmemory"
            android:layout_width="200dp"
            android:layout_height="240dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="100dp"
            android:layout_toEndOf="@+id/buttonsudoku"
            android:layout_toRightOf="@+id/buttonsudoku"
            android:background="@drawable/memory"
             />

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>